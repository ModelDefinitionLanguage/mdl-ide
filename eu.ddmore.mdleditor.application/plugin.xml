<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
         <!-- See https://bugs.eclipse.org/bugs/show_bug.cgi?id=312819 for why the product.name is not externalized -->
      <product name="DDMoRe MDL IDE 1.0 (alpha)" application="org.eclipse.ui.ide.workbench" description="%aboutText">
         <property
               name="appName"
               value="DDMoRe MDL IDE 1.0 (alpha)">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/eu.ddmore.mdleditor.application/css/default.css">
         </property>
         <property
               name="cssTheme"
               value="org.eclipse.e4.ui.css.theme.e4_default">
         </property>
         <property
               name="applicationCSSResources"
               value="platform:/plugin/org.eclipse.platform/images/">
         </property>
         <property
             name="aboutText"
             value="%aboutText">
         </property>
         <property
               name="aboutImage"
               value="icons/about_image.png">
         </property> 
      </product>
   </extension>
   
</plugin>
